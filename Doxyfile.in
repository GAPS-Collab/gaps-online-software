PROJECT_NAME          = "gaps-online-software"
PROJECT_BRIEF          = "online software for the TOF system for the GAPS experiment"
PROJECT_NUMBER         = @CMAKE_PROJECT_VERSION@
PROJECT_LOGO           = @CMAKE_CURRENT_SOURCE_DIR@/resources/assets/GAPSLOGO_2023_ico.png
INPUT                  = @DOXYGEN_INPUT@
INPUT                  += @CMAKE_CURRENT_SOURCE_DIR@/doc/docs_main.md
USE_MDFILE_AS_MAINPAGE = @CMAKE_CURRENT_SOURCE_DIR@/doc/docs_main.md
OUTPUT_DIRECTORY       = @DOXYGEN_OUTPUT_DIRECTORY@
GENERATE_HTML          = @DOXYGEN_GENERATE_HTML@
GENERATE_MAN           = @DOXYGEN_GENERATE_MAN@
GENERATE_TREEVIEW      = YES # optional. Also works without treeview
DISABLE_INDEX = NO
FULL_SIDEBAR = NO
HTML_EXTRA_STYLESHEET  = @CMAKE_CURRENT_SOURCE_DIR@/resources/extern/doxygen-awesome-css/doxygen-awesome.css
HTML_COLORSTYLE        = LIGHT # required with Doxygen >= 1.9.5
RECURSIVE              = YES # make sure that headers in sub dirs are considered as well
